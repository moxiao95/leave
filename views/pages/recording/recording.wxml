<view class="recording">
	<view wx:if="{{show}}">
		<view
			class="recording-item"
			wx:for="{{dataList}}"
			wx:key="index"
		>
			<view
				class="item-time"
			>{{item.time}}</view>
			<view
				class="item-state state-by"
				wx:if="{{item.state == 1}}"
				bindtap="toInfoPage"
				data-item="{{item}}"
				data-index="{{index}}"
			>已批准</view>
			<view
				class="item-state state-audit"
				wx:elif="{{item.state == 0}}"
				bindtap="toInfoPage"
				data-item="{{item}}"
				data-index="{{index}}"
			>审批中</view>
			<view
				class="item-state state-no"
				wx:else
				bindtap="toInfoPage"
				data-item="{{item}}"
				data-index="{{index}}"
			>未批准</view>
		</view>
	</view>
	<view wx:else>
		<view
			class="recording-list-item"
			wx:for="{{recordingList}}"
			wx:key="id"
		>
			<view class="list-item-info">{{item.info}}</view>
			<view
				class="list-item-yes"
				wx:if="{{item.state == 1}}"
				data-id="{{item.id}}"
				bindtap="toListPage"
			>已批准</view>
			<view
				class="list-item-no"
				wx:else
				data-id="{{item.id}}"
				bindtap="toListPage"
			>未批准</view>
		</view>
	</view>
</view>